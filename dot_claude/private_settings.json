{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "osgrep@osgrep": false
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/alexeyprudkin/.claude/hooks/osgrep-start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/alexeyprudkin/.claude/hooks/osgrep-end.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
